<div class="card w-50 mx-auto">
    <form action="/signup" method="POST" class="card-body">

        <div class="form-group row">
            <label for="handle" class="col-4 col-form-label">Handle</label>
            <div class="col-8">
                <input type="text" class="form-control" name="handle" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="email" class="col-4 col-form-label">Email</label>
            <div class="col-8">
                <input type="email" class="form-control" name="email" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-4 col-form-label">Password</label>
            <div class="col-8">
                <input type="password" class="form-control" name="Password" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="password2" class="col-4 col-form-label">Confirm Password</label>
            <div class="col-8">
                <input type="password" class="form-control" name="Password2" required>
            </div>
        </div>
        <div class="form-group row">
            <input type="submit" value="Submit" class="btn btn-primary col-2 mx-auto">
        </div>

    </form>
</div>