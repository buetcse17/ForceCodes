<!-- profile -->
<div class="card border-secondary px-3 py-2">
    <div class="row">
        <!-- left side -->
        <div class="col-9">
            <!-- rank -->
            <div class="py-2 my-bold" <%-'style="color:' + profile.COLOR + '"'%> >
                <%= profile.RANK_NAME %>
            </div> 
            <!-- handle header -->
            <div class="py-2 my-handle-header my-bold" <%-'style="color:' + profile.COLOR + '"'%> >
                <%= profile.HANDLE %>
            </div> 
            <!-- name, country, city, organizatin block -->
            <div class="py-2">
                <!-- name, country, city -->
                <% if(profile.NAME !== '' || profile.CITY !== null || profile.COUTNRY !== null){ %>
                    <div class="text-muted">
                        <%= [profile.NAME, profile.CITY, profile.COUNTRY].filter(x => (x !== null && x !== '')).join(', ') %>
                    </div> 
                <% } %>
                <!-- organization -->
                <% if(profile.ORGANIZATION !== null) { %>
                    <div class="text-muted">
                        From <%= profile.ORGANIZATION %>
                    </div> 
                <% } %>
            </div>
            <!-- add friend/remove friend -->
            <% if(user !== null && user.handle != profile.HANDLE){ %>
                <div class="py-2">
                    <form action="/profile/<%= user.handle%>/friends" method="POST" class="my-logout-form">
                        <input type="hidden" name="addFriend" value="<%= !profile.IS_FRIEND %>">
                        <input type="hidden" name="handle" value="<%= profile.HANDLE %>">
                        <input type="submit" value="<%= (profile.IS_FRIEND)? 'Remove friend' : 'Add friend' %>" class="btn btn-link my-logout">
                    </form>
                </div>
            <% } %>
            <!-- email -->
            <div class="py-2">
                Email: <%= profile.EMAIL %>
            </div> 
            <!-- rating -->
            <div class="py-2">
                Contest rating: <%= profile.RATING %>
            </div> 
            <!-- friend count -->
            <div class="py-2">
                Friend of: <%= profile.FRIEND_COUNT %>
            </div> 
            <!-- last visit -->
            <div class="py-2">
                Last visit: <%- profile.LAST_VISIT === 'now'? "<span class='text-success'>online now</span>" : profile.LAST_VISIT + ' ago' %>
            </div> 
            <!-- registered -->
            <div class="py-2">
                Registered: <%= profile.REGISTERED === 'now'? 'now' : profile.REGISTERED + ' ago' %>
            </div> 
            <!-- blog entries -->
            <div class="py-2">
                <a href="<%= profile.HANDLE %>/blog" >Blog entries(<%= profile.BLOG_COUNT %>)</a>
            </div>
            <!-- talks -->
            <div class="py-2">
                <a href="/messeges"> Talks </a>
            </div>
        </div>
        <!-- right side -->
        <div class="col-3 mx-0 px-0 text-right">
            <div class="border text-center mx-3 my-2">
                <!-- image -->
                <img src="/images/no-profile-picture.jpg" alt="no picture" class=" img-fluid m-4">  
                <!-- change picture -->
                <% if(user !== null && user.handle == profile.HANDLE){ %>  
                    change picture
                <% } %>
            </div>
            
        </div>
    </div>
</div>