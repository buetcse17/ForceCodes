<!-- user list -->
<% if(adminContest) { %>
    <ul class="list-inline">
        <li class="list-inline-item">
            <b class="text-danger pl-1">
                You are administrating this contest
            </b>
        </li>
        <% if(contest.TIME_START > new Date()) { %>
            <li class="list-inline-item my-small-text float-right">
                <a href="/contest/<%= contest.ID %>/edit">
                    Edit Contest Details
                </a>
            </li>
        <% } %>
    </ul>
<% } %>

<b class="float-left"></b>
<div class="card border">
    <div class="card-header my-card-header">
        Problems
    </div>
    <table class="table table-sm table-bordered my-card-no-bottom">
        <!-- list header -->
        <tr>
            <th width="8%" class="text-center">#</th>
            <th width="62%" class="pl-3">name</th>
            <th width="13%" class="text-center">limits</th>
            <th width="10%"></th>
            <th width="8%"></th>
        </tr>
        <!-- each row -->
        <% for(let i = 0; i<3; i++){ %>
            <tr class="<%= (i%2 == 1)? 'my-row-alter' : '' %>">
                <td class="text-center">
                    1
                </td>
                <td class="pl-3" >
                    2
                </td>
                <td class="text-center">
                    3
                </td>
                <td class="text-center">
                    submit
                </td>
                <td class="text-center">
                    3
                </td>
            </tr>
        <% } %>
        <% if(adminContest && contest.TIME_START > new Date()) { %>
            <tr>
                <td colspan="5" class="text-center">
                    <a href="/contest/<%= contest.ID %>/problem/new">
                        add new problem
                    </a> 
                </td>
            </tr>
        <% } %>
    </table>
</div>

<!-- Announcements -->
<div class="card border mt-5">
    <div class="card-header my-card-header">
        Announcements
    </div>
    <table class="table table-sm table-bordered my-card-no-bottom">
        <!-- list header -->
        <tr>
            <th width="15%" class="text-center">When</th>
            <th width="85%"></th>
        </tr>
        <!-- each row -->
        <tr>
            <td class="text-center">
                1
            </td>
            <td class="pl-3" >
                2
            </td>
        </tr>
        <tr>
            <td colspan="2" class="text-center">
                add announcement
            </td>
        </tr>
    </table>
</div>